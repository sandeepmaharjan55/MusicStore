                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Sandeep's Music Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Album", "Index", "Album")</li>
                        <li>@Html.ActionLink("Artist", "Index", "Artist")</li>
                        <li>@Html.ActionLink("Genre", "Index", "Genre")</li>

