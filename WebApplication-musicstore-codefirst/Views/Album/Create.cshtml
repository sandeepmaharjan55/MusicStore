            <div class="col-md-10">
                @Html.DropDownList("GenreId", null, htmlAttributes: new { @class = "form-control" },optionLabel:"-------select----")
                @Html.ValidationMessageFor(model => model.GenreId, "", new { @class = "text-danger" })
