@model WebApplication_musicstore_codefirst.Models.Album

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Create", "Album",FormMethod.Post, new {@enctype = "multipart/form-data" }))
{
